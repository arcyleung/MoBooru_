<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" tools:targetApi="lollipop">
        <item name="colorPrimaryDark">#434343</item>
        <item name="colorPrimary">#434343</item>
        <item name="colorAccent">#ff0066</item>
        <item name="colorControlNormal">#ff0066</item>
        <item name="colorControlActivated">#ff0066</item>
        <item name="colorControlHighlight">#ff0066</item>
        <item name="colorButtonNormal">#434343</item>
        <item name="colorSwitchThumbNormal">#434343</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar" tools:targetApi="lollipop">
        <item name="colorPrimaryDark">#434343</item>
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorAccent">#ff0066</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#ff0066</item>
        <item name="colorControlActivated">#ff0066</item>
    </style>

</resources>
